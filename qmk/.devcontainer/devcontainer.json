{
  "name": "QMK Development",
  "image": "qmkfm/qmk_cli",
  "runArgs": ["--security-opt", "label=disable"],
  "mounts": [
    "type=volume,source=qmk_firmware,target=/qmk_firmware",
    "type=bind,source=${localWorkspaceFolder}/.build,target=/qmk_firmware/.build"
  ],
  "workspaceMount": "type=bind,source=${localWorkspaceFolder}/users/kemonine,target=/qmk_firmware/users/kemonine"
  "workspaceFolder": "/qmk_firmware/users/kemonine"
  "extensions": [
    "ms-vscode.cpptools",
    "EditorConfig.EditorConfig"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  }
}
